{
	"name": "RVDM-Angular-Starterkit",
	"version": "1.1.1",
	"homepage": "/",
	"author": "Rick van der Meij",
	"private": false,
	"license": "ISC",
	"scripts": {
		"start": "ng serve",
		"start:clean": "npm run clean:install && npm run start",
		"start:mock": "ng serve --extra-webpack-config webpack.partial.js --configuration=mock",
		"start:prerender": "npm run prerender:build && cd dist/browser && http-server -g -P \"404\" -c 12960000",
		"start:ssr": "npm run ssr:build && npm run ssr:serve",
		"certificate:generate": "cd ci && bash generateCertificateOSX.sh",
		"clean": "rimraf node_modules reports dist coverage documentation",
		"clean:install": "npm run clean && npm i",
		"doc": "compodoc --coverageTestThresholdFail=false",
		"doc:full": "npm run test:unit-headless && npm run test:e2e && npm run wpo:stats && npm run wpo:lighthouse && npm run doc:reports && npm run doc -- --includes compodoc-additional-doc",
		"doc:full:ivy": "npm run test:unit-headless && npm run test:e2e && npm run wpo:stats-es2015 && npm run wpo:stats-es5 && npm run wpo:lighthouse && npm run doc:reports && npm run doc -- --includes compodoc-additional-doc",
		"doc:reports": "npx mkdirp documentation/additional-documentation && npx ncp reports documentation/additional-documentation",
		"build": "ng build --prod --stats-json",
		"build:client-and-server-bundles": "npm run build:gzip && ng run $npm_package_name:server:production",
		"build:gzip": "npm run build && gzip-all \"dist/browser/*.{css,js,html}\"",
		"format": "prettier --config .prettierrc --ignore-path .prettierignore \"**/*.{ts,json,md,scss,js}\"",
		"format:check": "npm run format -- --check",
		"format:watch": "onchange '**/*.{ts,json,md,scss,js}' -- prettier --config .prettierrc --ignore-path .prettierignore --write {{changed}}",
		"format:write": "npm run format -- --write",
		"lint": "ng lint && npm run stylelint",
		"prerender:build": "npm run build:client-and-server-bundles && tsc -p server.tsconfig.json && npm run prerender:generate",
		"prerender:generate": "cd dist && node prerender",
		"server:mock": "node ./mockserver/mockserver.js",
		"ssr:build": "npm run build:client-and-server-bundles && npm run ssr:webpack",
		"ssr:serve": "node dist/server.js",
		"ssr:webpack": "webpack --config webpack.server.config.js --progress --colors",
		"stylelint": "stylelint \"src/{scss,app}/**/*.scss\" --config .stylelintrc --fix",
		"test": "rimraf \"coverage\" & ng test --code-coverage --browsers Chrome",
		"test:e2e": "npm run server:mock & rimraf \"reports/e2e/{json-output-folder,report,screenshots}\" && ng e2e",
		"test:unit-headless": "npm run test -- --browsers ChromeNoSandbox --watch=false",
		"wpo:lighthouse": "node ./ci/fetchLighthouse.js",
		"wpo:stats": "webpack-bundle-analyzer dist/browser/stats.json --mode=static --report=\"reports/wpo/bundle-report.html\" --no-open && npx cpx dist/browser/stats.json reports/wpo",
		"wpo:stats-es5": "webpack-bundle-analyzer dist/browser/stats-es5.json --mode=static --report=\"reports/wpo/bundle-report-es5.html\" --no-open && npx cpx dist/browser/stats-es5.json reports/wpo",
		"wpo:stats-es2015": "webpack-bundle-analyzer dist/browser/stats-es2015.json --mode=static --report=\"reports/wpo/bundle-report-es2015.html\" --no-open && npx cpx dist/browser/stats-es2015.json reports/wpo"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged && npm run lint",
			"pre-push": "npm run test:unit-headless"
		}
	},
