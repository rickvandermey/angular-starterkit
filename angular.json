{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"newProjectRoot": "projects",
	"projects": {
		"RVDM-Angular-Starterkit": {
			"root": "",
			"sourceRoot": "src",
			"projectType": "application",
			"prefix": "app",
			"schematics": {},
			"architect": {
				"build": {
					"builder": "ngx-build-plus:browser",
					"options": {
						"assets": [
							"src/.htaccess",
							"src/assets",
							"src/favicon.ico",
							"src/manifest.json",
							"src/robots.txt"
						],
						"index": "src/index.html",
						"main": "src/main.ts",
						"outputPath": "dist/browser",
						"polyfills": "src/polyfills.ts",
						"styles": ["src/scss/index.scss"],
						"scripts": [],
						"tsConfig": "src/tsconfig.app.json"
					},
					"configurations": {
						"mock": {
							"fileReplacements": [
								{
									"replace": "src/environments/environment.ts",
									"with": "src/environments/environment.mock.ts"
								}
							]
						},
						"production": {
							"fileReplacements": [
								{
									"replace": "src/environments/environment.ts",
									"with": "src/environments/environment.prod.ts"
								}
							],
							"aot": true,
							"buildOptimizer": true,
							"extractCss": true,
							"extractLicenses": true,
							"namedChunks": false,
							"optimization": true,
							"outputHashing": "all",
							"serviceWorker": true,
							"sourceMap": false,
							"vendorChunk": false
						}
					}
				},
				"serve": {
					"builder": "ngx-build-plus:dev-server",
					"options": {
						"aot": true,
						"browserTarget": "RVDM-Angular-Starterkit:build",
						"port": 4202,
						"ssl": true,
						"sslKey": "build/server.key",
						"sslCert": "build/server.crt"
					},
					"configurations": {
						"mock": {
							"browserTarget": "RVDM-Angular-Starterkit:build:mock"
						},
						"production": {
							"browserTarget": "RVDM-Angular-Starterkit:build:production"
						}
					}
				},
				"extract-i18n": {
					"builder": "@angular-devkit/build-angular:extract-i18n",
					"options": {
						"browserTarget": "RVDM-Angular-Starterkit:build"
					}
				},
				"test": {
					"builder": "ngx-build-plus:karma",
					"options": {
						"assets": [
							"src/.htaccess",
							"src/assets",
							"src/favicon.ico",
							"src/manifest.json",
							"src/robots.txt"
						],
						"codeCoverageExclude": [
							"src/app/testing/*",
							"src/app/ssr/*"
						],
						"karmaConfig": "src/karma.conf.js",
						"main": "src/test.ts",
						"polyfills": "src/polyfills.ts",
						"styles": ["src/scss/index.scss"],
						"scripts": [],
						"tsConfig": "src/tsconfig.spec.json"
					}
				},
				"e2e": {
					"builder": "@angular-devkit/build-angular:protractor",
					"options": {
						"devServerTarget": "RVDM-Angular-Starterkit:serve:mock",
						"protractorConfig": "src/cucumber.conf.js",
						"webdriverUpdate": false
					}
				},
				"lint": {
					"builder": "@angular-devkit/build-angular:tslint",
					"options": {
						"exclude": ["**/node_modules/**"],
						"files": ["**/*.ts"],
						"tsConfig": [
							"src/tsconfig.app.json",
							"src/tsconfig.spec.json",
							"src/tsconfig.cucumber.json",
							"server.tsconfig.json"
						]
					}
				},
				"server": {
					"builder": "@angular-devkit/build-angular:server",
					"options": {
						"outputPath": "dist/server",
						"main": "src/main.server.ts",
						"tsConfig": "src/tsconfig.server.json"
					},
					"configurations": {
						"ssr": {
							"fileReplacements": [
								{
									"replace": "src/environments/environment.ts",
									"with": "src/environments/environment.prod.ts"
								}
							],
							"optimization": {
								"scripts": true,
								"styles": true
							},
							"sourceMap": false
						}
					}
				}
			}
		}
	},
	"defaultProject": "RVDM-Angular-Starterkit"
}
